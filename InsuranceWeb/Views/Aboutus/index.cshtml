<script type="text/javascript">
        $(document).ready(function () {
            //列表回弹
            $('[data-toggle="canvas"]').click(function () {
                $('.row-offcanvas').toggleClass('active');
            });

            //列表切换
            var li = $(".list-group a");
            li.click(function (e) {
                $(this).addClass("active").siblings().removeClass("active");
                var index = li.index(this);
                $("#content > div").eq(index).show().siblings().hide();
                $("#title").html(this.text);//设置标题
                $('.row-offcanvas').toggleClass('active');
            });
            //获取连接参数
            var urlParam = window.location.search;
            var p = urlParam.lastIndexOf('=');//查找等号
            if (p == -1) {
                loc = urlParam.substring(1, urlParam.length);//获取类型
            } else {
                loc = urlParam.substring(1, urlParam.lastIndexOf('='));//获取类型
            }
            if (urlParam.lastIndexOf('?') == -1) {
                loc = "GSJJ";
            }
            var c = "#" + loc;//制造ID
            $(c).click();//执行单击事件
        });
</script>
